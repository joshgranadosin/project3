<%= render "partials/nav" %>

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-6 col-sm-10 col-lg-12">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xs-6 col-sm-4 col-lg-12">
                        <h2 class="solutions">ALL SOLUTIONS FOR:</h2>
                        <div class="row">
                            <div class="col s12 m12 l12">
                                <div class="card-panel">
                                    <h1>
                                    <%= @question.title%></h1><span><%= @question.content%></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col s12 m12 l12">
                    <div class="card-panel">
                        <span></span>
                        <h3>
                        <span><%@solutions.each do |solution|  %></span></h3>
                        <h4><span>SOLUTION BY - <%= solution.user.name %>
                        <a href="/solutions/%3C%=%20solution.id%20%%3E">
                        <p><span><%= solution.content %></span></p></a></span>
                        <%= link_to like_solution_path(solution), method: :put do %>
                        <button class="btn waves-effect waves-light" id="up">UP
                        <span>(<%= solution.get_upvotes.size  %>)</span></button>
                        <%end  %>
                        <%= link_to dislike_solution_path(solution), method: :put do %>
                        <button class="btn waves-effect waves-light" id=
                        "down">DOWN
                        <span>(<%= solution.get_downvotes.size  %>)</span></button>
                        <%end %> <a class="btn waves-effect waves-light" href=
                        "/solutions/%3C%=%20solution.id%20%%3E" id=
                        "down">COMMENTS
                        <span>(<%= @comment_counts[solution.id] %>)</span></a>
                        <%end %></h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%= render "partials/footer" %>

