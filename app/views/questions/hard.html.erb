<%= render "partials/nav" %>

<div class="container-fluid">
<a class="hidden" id="difficulty" data="HARD_STATE"></a>
 <h1>Problem:</h1>
            <h3><%= @question[0].content %></h3>
            <div id="countdown"></div>
    <div class="row">
        <div class="col-xs-6 col-sm-10 col-lg-12">
